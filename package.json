{
  "name": "ai-workflow",
  "version": "0.1.0",
  "description": "AI エージェントを使った開発ワークフローを自動化するためのツール",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ai-workflow": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "ai",
    "workflow",
    "automation",
    "cli",
    "claude",
    "openai"
  ],
  "author": "Yugo",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "commander": "^12.1.0",
    "yaml": "^2.6.1",
    "chalk": "^5.3.0",
    "ora": "^8.1.1",
    "glob": "^11.0.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
